{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "cloudFictitiousCompanyNamePrefix": {
      "type": "string",
      "defaultValue": "covid19mdwoh"
    },
    "vmAdminUserName": {
      "type": "string",
      "minLength": 1
    },
    "vmAdminPassword": {
      "type": "securestring"
    },
    "sqlAdminLogin": {
      "type": "string",
      "minLength": 1
    },
    "sqlAdminLoginPassword": {
      "type": "securestring"
    },
    "covid19DacPacPath": {
      "type": "string"
    },
    "covid19BackupFileName": {
      "type": "string"
    },
    "covid19DatabaseName": {
      "type": "string"
    }
  },
  "variables": {},
  "resources": [
    {
      "name": "deployCosmosLinkedTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri, 'deploycosmosdb.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "namePrefix": {
            "value": "[parameters('CloudFictitiousCompanyNamePrefix')]"
          }
        }
      }
    },
    {
      "name": "deploySqlAzureLinkedTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri, 'deploycosmosdb.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "namePrefix": {
            "value": "[parameters('CloudFictitiousCompanyNamePrefix')]"
          },
          "sqlAdminLogin": {
            "value": "[parameters('sqlAdminLogin')]"
          },
          "sqlAdminLoginPassword": {
            "value": "[parameters('sqlAdminLoginPassword')]"
          }
        }
      }
    },
    {
      "name": "deploySynapseLinkedTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri, 'deploycosmosdb.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "namePrefix": {
            "value": "[parameters('CloudFictitiousCompanyNamePrefix')]"
          },
          "sqlAdminLogin": {
            "value": "[parameters('sqlAdminLogin')]"
          },
          "sqlAdminLoginPassword": {
            "value": "[parameters('sqlAdminLoginPassword')]"
          }
        }
      }
    },
    {
      "name": "deploySqlVmLinkedTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri, 'deploycosmosdb.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "namePrefix": {
            "value": "[parameters('cloudFictitiousCompanyNamePrefix')]"
          },
          "vmAdminUsername": {
            "value": "[parameters('vmAdminUserName')]"
          },
          "vmAdminPassword": {
            "value": "[parameters('vmAdminPassword')]"
          },
          "sqlAdminLogin": {
            "value": "[parameters('sqlAdminLogin')]"
          },
          "sqlAdminLoginPassword": {
            "value": "[parameters('sqlAdminLoginPassword')]"
          },
          "covid19BackupFileName": {
            "value": "[parameters('covid19BackupFileName')]"
          },
          "covid19DatabaseName": {
            "value": "[parameters('covid19DatabaseName')]"
          },
          "cosmosDBConnectionString":{
            "value": "[reference('deployCosmosLinkedTemplate').outputs.connectionString.value]"
          },
          "cosmosDBDatabaseName":{
            "value": "[parameters('covid19DatabaseName')]"
          }
        }
      }
    }
  ],
  "outputs": {}
}